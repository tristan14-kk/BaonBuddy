<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.transactions.SpentMoneyActivity">

    <!-- Navy Blue Header -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/navy_blue"
        android:layout_alignParentTop="true">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Go back"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spent Money"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track your expenses"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.8"
            android:layout_below="@id/titleText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp" />

    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="40dp">

            <!-- Amount Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How much did you spend?"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Amount Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/input_background"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱"
                    android:textColor="@color/text_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/amountInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0.00"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/text_dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Quick Amounts Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick amounts:"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/quickAmount50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱50.00"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:background="@drawable/button_outline"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/quickAmount100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱100.00"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:background="@drawable/button_outline"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/quickAmount200"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱200.00"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:background="@drawable/button_outline"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Category Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What did you spend it on?"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <!-- Category Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/categoryFood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:background="@drawable/button_outline"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/categoryTransport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transport"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:background="@drawable/button_outline"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Category Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/categorySchool"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="School"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:background="@drawable/button_outline"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/categoryOther"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:background="@drawable/button_outline"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Note Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a note (Optional)"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/noteInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., Lunch at cafeteria"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:background="@drawable/input_background"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:maxLines="1" />

            <!-- Record Button -->
            <Button
                android:id="@+id/recordButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Record Expense"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@drawable/button_primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>